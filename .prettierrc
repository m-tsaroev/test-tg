{
	"trailingComma": "none",
	"useTabs": true,
	"semi": false,
	"tabWidth": 2,
	"jsxSingleQuote": true,
	"singleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/api/(.*)$",
		"^@/app/(.*)$",
		"^@/pages/(.*)$",
		"^@/components/(.*)$",
		"^@/services/(.*)$",
		"^@/store/(.*)$",
		"^@/hooks/(.*)$",
		"^@/shared/(.*)$",
		"^@/utils/(.*)$",
		"^@/config/(.*)$",
		"^@/constants/(.*)$",
		"^@/types/(.*)$",
		"^../(.*)$",
		"^./(.*)$",
		"^.+\\.(css|scss)$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
